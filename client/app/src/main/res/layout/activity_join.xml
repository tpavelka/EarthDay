<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/topdiv4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="8"
            android:background="@color/colorSky" />

        <EditText
            android:id="@+id/text_enterjoingrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorEarth"
            android:inputType="none"
            android:text="@string/text_joingrp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30sp" />

        <View
            android:id="@+id/middiv4b"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/colorDirt" />

        <Button
            android:id="@+id/btn_joingrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorEarth"
            android:onClick="functionJoinGroup"
            android:text="@string/btn_joingrp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/btmdiv4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="8"
            android:background="@color/colorSky" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>